@model MusicStreaming.Web.ViewModels.ArtistDetailViewModel

@{
    ViewData["Title"] = "Artist Details";
}

<div class="container">
    <h2>@Model.Name</h2>
    
    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-3">Genre</dt>
                <dd class="col-sm-9">@Model.Genre</dd>
            </dl>
        </div>
    </div>
    
    <h3>Albums</h3>
    
    @if (Model.Albums != null && Model.Albums.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Release Year</th>
                    <th>Genre</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var album in Model.Albums)
                {
                    <tr>
                        <td>@album.Title</td>
                        <td>@album.ReleaseYear</td>
                        <td>@album.Genre</td>
                        <td>
                            <a asp-controller="Albums" asp-action="Details" asp-route-id="@album.Id" class="btn btn-sm btn-info">View</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No albums found for this artist.</p>
    }
    
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>