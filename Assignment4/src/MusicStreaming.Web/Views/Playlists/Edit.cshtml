@model MusicStreaming.Web.ViewModels.EditPlaylistViewModel

@{
    ViewData["Title"] = "Edit Playlist";
}

<h2>Edit Playlist</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    
    <!-- Add this section to show and manage songs -->
    <div class="form-group">
        <h4>Songs</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Artist</th>
                    <th>Duration</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Songs != null && Model.Songs.Any())
                {
                    foreach (var song in Model.Songs)
                    {
                        <tr>
                            <td>@song.Title</td>
                            <td>@song.ArtistName</td>
                            <td>@song.DurationFormatted</td>
                            <td>
                                <a asp-controller="Playlists" asp-action="RemoveSong" 
                                   asp-route-playlistId="@Model.Id" asp-route-songId="@song.Id" 
                                   class="btn btn-sm btn-danger">Remove</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4">No songs in this playlist</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>